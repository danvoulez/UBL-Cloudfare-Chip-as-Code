{
  "$schema": "http://json-schema.org/draft-07/schema#",
  "title": "JSON Atomic Envelope",
  "type": "object",
  "additionalProperties": false,
  "properties": {
    "id": {
      "type": "string",
      "minLength": 1
    },
    "ts": {
      "type": "string",
      "format": "date-time"
    },
    "kind": {
      "type": "string",
      "minLength": 1
    },
    "scope": {
      "type": "object",
      "additionalProperties": false,
      "properties": {
        "tenant": {
          "type": "string",
          "minLength": 1
        },
        "entity": {
          "type": [
            "string",
            "null"
          ]
        },
        "room": {
          "type": [
            "string",
            "null"
          ]
        },
        "container": {
          "type": [
            "string",
            "null"
          ]
        }
      },
      "required": [
        "tenant"
      ]
    },
    "actor": {
      "type": "string",
      "minLength": 1
    },
    "refs": {
      "type": "array",
      "items": {
        "type": "string"
      }
    },
    "data": {
      "type": "object"
    },
    "meta": {
      "type": "object"
    },
    "sig": {
      "type": [
        "object",
        "null"
      ],
      "additionalProperties": false,
      "properties": {
        "alg": {
          "type": "string",
          "minLength": 1
        },
        "kid": {
          "type": "string"
        },
        "value": {
          "type": "string",
          "minLength": 1
        }
      },
      "required": [
        "alg",
        "value"
      ]
    }
  },
  "required": [
    "id",
    "ts",
    "kind",
    "scope",
    "actor",
    "refs",
    "data",
    "meta",
    "sig"
  ]
}