{
  "$schema": "http://json-schema.org/draft-07/schema#",
  "title": "ledger.media.ingest.completed",
  "allOf": [
    {
      "$ref": "./atomic.schema.json"
    },
    {
      "type": "object",
      "properties": {
        "kind": {
          "const": "media.ingest.completed"
        },
        "data": {
          "type": "object",
          "properties": {
            "object_id": {
              "type": "string"
            },
            "bytes": {
              "type": "integer",
              "minimum": 0
            },
            "duration_ms": {
              "type": "integer",
              "minimum": 0
            },
            "media": {
              "type": "object",
              "properties": {
                "type": {
                  "type": "string",
                  "enum": [
                    "image",
                    "audio",
                    "video"
                  ]
                },
                "width": {
                  "type": "integer",
                  "minimum": 1
                },
                "height": {
                  "type": "integer",
                  "minimum": 1
                },
                "duration_s": {
                  "type": "number",
                  "minimum": 0
                },
                "codecs": {
                  "type": "string"
                }
              },
              "required": [
                "type"
              ],
              "additionalProperties": false
            },
            "thumbnails": {
              "type": "array",
              "items": {
                "type": "string"
              }
            },
            "playlist": {
              "type": "string"
            },
            "trace_id": {
              "type": "string"
            }
          },
          "additionalProperties": false,
          "required": [
            "object_id",
            "bytes",
            "media"
          ]
        }
      }
    }
  ]
}