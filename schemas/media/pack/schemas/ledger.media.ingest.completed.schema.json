{
  "$schema": "http://json-schema.org/draft-07/schema#",
  "title": "Ledger Event: media.ingest.completed",
  "type": "object",
  "allOf": [
    {
      "$ref": "./atomic.schema.json"
    }
  ],
  "properties": {
    "kind": {
      "const": "media.ingest.completed"
    },
    "data": {
      "type": "object",
      "additionalProperties": false,
      "properties": {
        "object_id": {
          "type": "string",
          "minLength": 1
        },
        "bytes": {
          "type": "integer",
          "minimum": 0
        },
        "duration_ms": {
          "type": "integer",
          "minimum": 0
        },
        "media": {
          "type": "object",
          "additionalProperties": false,
          "properties": {
            "type": {
              "type": "string",
              "enum": [
                "video",
                "audio",
                "image"
              ]
            },
            "width": {
              "type": "integer",
              "minimum": 1
            },
            "height": {
              "type": "integer",
              "minimum": 1
            },
            "duration_s": {
              "type": "number",
              "minimum": 0
            },
            "codecs": {
              "type": "string"
            }
          },
          "required": [
            "type"
          ]
        },
        "thumbnails": {
          "type": "object",
          "additionalProperties": false,
          "properties": {
            "generated": {
              "type": "integer",
              "minimum": 0
            }
          }
        },
        "playlist": {
          "type": "object",
          "additionalProperties": false,
          "properties": {
            "hls": {
              "type": "boolean"
            },
            "dash": {
              "type": "boolean"
            }
          }
        },
        "trace_id": {
          "type": "string",
          "minLength": 1
        }
      },
      "required": [
        "object_id",
        "bytes",
        "media",
        "trace_id"
      ]
    }
  },
  "required": [
    "kind",
    "data"
  ]
}