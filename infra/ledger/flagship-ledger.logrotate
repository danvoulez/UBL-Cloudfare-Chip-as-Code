/var/log/ubl/flagship-ledger.ndjson {
    daily
    rotate 14
    compress
    delaycompress
    missingok
    notifempty
    create 0644 ubl-ops ubl-ops
    sharedscripts
    postrotate
        # Trigger sync after rotation
        systemctl start flagship-ledger-sync.service || true
    endscript
}
